!!!5
%html
	%head
		%meta{charset: "UTF-8"}/
		%meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
		%title CombinePDF Demo | Bates numbering | merge pdf | index tables | pdf fonts
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body{ class: I18n.locale}
		%label.show-menu{for: "show-menu"}
		%input#show-menu{role: "button", type: "checkbox"}/
		%nav#nav{role: "navigation"}
			%ul#menu
				%li
					= link_to 'Welcome', welcome_path
				%li
					%a{href: "#"} Examples
					%ul
						%li
							= link_to 'Merge PDF Files', combine_path
						%li
							= link_to "Number PDF pages", number_path
						%li
							= link_to "Add a Logo (stamp)", stamp_path
						%li
							= link_to "Unicode and Fonts", fonts_path
						%li
							= link_to "Writing Tables", tables_path
						%li
							= link_to "The Amazing Bates", bates_path
				%li
					= link_to 'Code on GitHub', "https://github.com/boazsegev/combine_pdf"
				%li
					= link_to 'Documentation', "http://rubydoc.info/gems/combine_pdf/"
		#content
			- if flash[:notice]
				#notice
					= flash[:notice]
			=yield
		#footer